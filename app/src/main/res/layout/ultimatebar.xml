<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textView_ultbar_container"
    android:background="@drawable/healthbarbg"
    android:orientation="vertical" android:layout_width="100dp"
    android:layout_height="20dp">
    <TextView
        android:layout_margin="2dp"
        android:id="@+id/textView_ultbar"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:background="@color/colorAbilitybgLight"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/textView_barrier"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="0"
        android:alpha="0.7"
        android:scaleX="1.65"
        android:scaleY="50"
        android:visibility="invisible"
        android:src="@drawable/ultimabarv2"
        />

</FrameLayout>