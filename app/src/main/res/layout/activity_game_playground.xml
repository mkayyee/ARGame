<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.GameActivity">



    <fragment
        android:id="@+id/playground_sceneform_fragment"
        android:name="com.example.argame.Fragments.CustomArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center">

        <Button
            android:layout_margin="8dp"
            android:id="@+id/playground_spawnBtn"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start level"
            android:alpha="0.60"
            android:layout_marginBottom="20dp"/>
        <Button
            android:layout_margin="8dp"
            android:id="@+id/playground_toggleLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:alpha="0.60"
            android:layout_marginBottom="20dp"/>
        <Button
            android:layout_margin="8dp"
            android:id="@+id/playground_destroyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Level"
            android:alpha="0.60"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|right">

        <Button
            android:id="@+id/playground_exitBtn"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:alpha="0.60"
            android:text="x"
            app:cornerRadius="45dp" />

    </LinearLayout>


    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|right">

    <ImageButton
        android:id="@+id/playground_attackDuckBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/attack_icon"
        android:alpha="0.80"
        android:background="null"
        android:layout_marginTop="400dp"
        android:layout_marginRight="10dp"/>

</LinearLayout>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|left">

    <ImageButton
        android:id="@+id/playground_beamDuckBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/beam_icon"
        android:alpha="0.80"
        android:background="null"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="10dp"/>

</LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top">

        <TextView
            android:id="@+id/playground_targetTxt"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:gravity="center|bottom">

        <TextView
            android:id="@+id/playground_remaining"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/playground_main_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />




</FrameLayout>


