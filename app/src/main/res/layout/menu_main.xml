<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu_button_container"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SurvivAR"
        android:textSize="65sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:textAlignment="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_new_game"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_game"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_profile"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_high_scores"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/high_scores"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_game_settings"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_settings"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_resume_game"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/resume_game"/>

</LinearLayout>